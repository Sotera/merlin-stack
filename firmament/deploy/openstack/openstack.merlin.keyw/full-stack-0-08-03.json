      },
      "nifi": {
        "environment": [
        ],
        "deploy": {
          "replicas": 1,
          "restart_policy": {
            "condition": "on-failure"
          },
          "placement": {
            "constraints": [
              "engine.labels.affinity==generalWorkerNode"
