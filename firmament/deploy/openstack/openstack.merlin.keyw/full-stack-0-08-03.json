          "labels": [
            "traefik.jupyter.port=9999",
            "traefik.jupyter.frontend.rule=Host:jupyter.merlin.keyw",
            "traefik.jupyter.backend.loadbalancer.stickiness=true"
          ]
        },
        "volumes": [
          {
            "type": "volume",
            "source": "hadoop-datavolume",
            "target": "/mnt/merlin",
            "volume": {
              "nocopy": true
            }
          },
          {
            "type": "volume",
            "source": "hadoop-logvolume",
            "target": "/mnt/logs",
            "volume": {
              "nocopy": true
            }
          },
          {
            "type": "volume",
            "source": "uploads",
            "target": "/mnt/data"
          }
        ],
        "networks": [
