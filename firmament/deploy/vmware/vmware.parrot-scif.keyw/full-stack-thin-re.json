{
  "stackName": "rembleton-stack-merlin",
  "clusterPrefix": "rembleton-stack",
  "hostMachineDnsServer": "192.168.104.100",
  "defaultDockerRegistry": "docker-registry.parrot-scif.keyw:5000",
  "defaultDockerImageTag": "0.07.16",
  "traefikZoneName": "parrot-scif.keyw",
  "dockerMachineDriverOptions": {
    "driver": "vmwarevsphere",
    "engineInsecureRegistry": "docker-registry.parrot-scif.keyw:5000",
    "vmwarevsphereBoot2dockerUrl": "https://s3.amazonaws.com/merlin-jreeme/boot2docker.iso",
    "vmwarevsphereUsername": "root",
    "vmwarevspherePassword": "run2walk!",
    "vmwarevsphereDatastore": "datastore1",
    "vmwarevsphereVcenter": "vmware.parrot-scif.keyw"
  },
  "dockerMachines": {
    "common": {
      "vmwarevsphereCpuCount": 10,
      "vmwarevsphereDiskSize": 20000,
      "vmwarevsphereMemorySize": 24576
    },
    "manager": {
      "nodeCount": 1,
      "nodeName": "managerNode"
    },
    "workers": [
      {
        "nodeCount": 1,
        "nodeName": "elasticsearchNode0"
      },
      {
        "nodeCount": 1,
        "nodeName": "elasticsearchNode1"
      },
      {
        "nodeCount": 1,
        "nodeName": "elasticsearchNode2"
      },
      {
        "nodeCount": 1,
        "nodeName": "postgresNode"
      },
      {
        "nodeCount": 3,
        "nodeName": "sparkNode"
      },
      {
        "nodeCount": 1,
        "nodeName": "hdfsNode"
      },
      {
        "nodeCount": 1,
        "nodeName": "stagingServerNode"
      }
    ]
  },
  "nfsConfig": {
    "exportBaseDir": "/nfs-public/parrot-scif-re",
    "serverAddr": "nfs.parrot-scif.keyw",
    "options": "rw,proto=tcp,async,soft,nolock"
  },
  "dockerComposeYaml": {
    "version": "3.6",
    "networks": {
      "net": null
    },
    "configs": {
      "elasticsearch-log4j2-config": {
        "file": "../../config/log4j2.properties"
      },
      "elasticsearch-jvm-config": {
        "file": "../../config/jvm.options"
      },
      "elasticsearch-yml-config": {
        "file": "../../config/elasticsearch.yml"
      },
      "spark-defaults-config": {
        "file": "../../config/spark-defaults.conf"
      },
      "nginx-elasticsearch-config": {
        "file": "../../config/nginx-elasticsearch.conf"
      },
      "nginx-elasticsearch-head-config": {
        "file": "../../config/nginx-elasticsearch-head.conf"
      },
      "nginx-staging-config": {
        "file": "../../config/nginx-staging.conf"
      },
      "nginx-pgadmin4-config": {
        "file": "../../config/nginx-pgadmin4.conf"
      },
      "nginx-amino3-config": {
        "file": "../../config/nginx-amino3.conf"
      },
      "nginx-namenode-config": {
        "file": "../../config/nginx-namenode.conf"
      },
      "nginx-hdfs-config": {
        "file": "../../config/nginx-hdfs.conf"
      },
      "nginx-traefik-config": {
        "file": "../../config/nginx-traefik.conf"
      },
      "traefik-config": {
        "file": "../../config/traefik.toml"
      }
    },
    "volumes": {
      "hadoop-datavolume": {
        "driver": "local",
        "driver_opts": {
          "type": "nfs"
        }
      },
      "hadoop-logvolume": {
        "driver": "local",
        "driver_opts": {
          "type": "nfs"
        }
      },
      "uploads": {
        "driver": "local",
        "driver_opts": {
          "type": "nfs"
        }
      },
      "postgres": {
        "driver": "local",
        "driver_opts": {
          "type": "nfs"
        }
      },
      "elasticsearch0": {
        "driver": "local",
        "driver_opts": {
          "type": "nfs"
        }
      },
      "elasticsearch1": {
        "driver": "local",
        "driver_opts": {
          "type": "nfs"
        }
      },
      "elasticsearch2": {
        "driver": "local",
        "driver_opts": {
          "type": "nfs"
        }
      }
    },
    "services": {
      "pgadmin4": {
        "deploy": {
          "replicas": 1,
          "restart_policy": {
            "condition": "on-failure"
          },
          "placement": {
            "constraints": [
              "engine.labels.role==worker"
            ]
          },
          "labels": [
            "traefik.port=5050"
          ]
        },
        "networks": [
          "net"
        ]
      },
      "amino3": {
        "environment": [
          "AMINO3_REPLACE_BAD_DATA_SOURCE_WITH_MEMORY_DATA_SOURCE=false"
        ],
        "deploy": {
          "replicas": 1,
          "restart_policy": {
            "condition": "on-failure"
          },
          "placement": {
            "constraints": [
              "engine.labels.role==worker"
            ]
          },
          "labels": [
            "traefik.port=3000",
            "traefik.backend.loadbalancer.stickiness=true"
          ]
        },
        "networks": [
          "net"
        ]
      },
      "postgres": {
        "environment": [
          "POSTGRES_PASSWORD=password"
        ],
        "deploy": {
          "replicas": 1,
          "restart_policy": {
            "condition": "on-failure"
          },
          "placement": {
            "constraints": [
              "engine.labels.role==worker",
              "engine.labels.affinity==postgresNode"
            ]
          },
          "labels": [
            "traefik.port=5432"
          ]
        },
        "volumes": [
          {
            "type": "volume",
            "source": "postgres",
            "target": "/var/lib/postgresql/data",
            "volume": {
              "nocopy": false
            }
          }
        ],
        "networks": [
          "net"
        ]
      },
      "traefik": {
        "volumes": [
          {
            "type": "bind",
            "source": "/var/run/docker.sock",
            "target": "/var/run/docker.sock"
          }
        ],
        "configs": [
          {
            "source": "traefik-config",
            "target": "/etc/traefik/traefik.toml"
          }
        ],
        "ports": [
          "80:80",
          "8080:8080"
        ],
        "networks": [
          "net"
        ],
        "deploy": {
          "replicas": 1,
          "restart_policy": {
            "condition": "on-failure"
          },
          "placement": {
            "constraints": [
              "engine.labels.role==manager"
            ]
          },
          "labels": [
            "traefik.enable=false"
          ]
        }
      },
      "elasticsearch-head": {
        "deploy": {
          "replicas": 1,
          "restart_policy": {
            "condition": "on-failure"
          },
          "placement": {
            "constraints": [
              "engine.labels.role==worker"
            ]
          },
          "labels": [
            "traefik.port=9100"
          ]
        },
        "networks": [
          "net"
        ]
      },
      "elasticsearch": {
        "image": "elasticsearch",
        "configs": [
          {
            "source": "elasticsearch-yml-config",
            "target": "/usr/share/elasticsearch/config/elasticsearch.yml"
          },
          {
            "source": "elasticsearch-jvm-config",
            "target": "/usr/share/elasticsearch/config/jvm.options"
          },
          {
            "source": "elasticsearch-log4j2-config",
            "target": "/usr/share/elasticsearch/config/log4j2.properties"
          }
        ],
        "deploy": {
          "replicas": 1,
          "restart_policy": {
            "condition": "on-failure"
          },
          "placement": {
            "constraints": [
              "engine.labels.role==worker",
              "engine.labels.affinity==elasticsearchNode0"
            ]
          },
          "labels": [
            "traefik.port=9200"
          ]
        },
        "volumes": [
          {
            "type": "volume",
            "source": "elasticsearch0",
            "target": "/usr/share/elasticsearch/data",
            "volume": {
              "nocopy": false
            }
          }
        ],
        "networks": [
          "net"
        ]
      },
      "elasticsearch1": {
        "image": "elasticsearch",
        "configs": [
          {
            "source": "elasticsearch-yml-config",
            "target": "/usr/share/elasticsearch/config/elasticsearch.yml"
          },
          {
            "source": "elasticsearch-jvm-config",
            "target": "/usr/share/elasticsearch/config/jvm.options"
          },
          {
            "source": "elasticsearch-log4j2-config",
            "target": "/usr/share/elasticsearch/config/log4j2.properties"
          }
        ],
        "deploy": {
          "replicas": 1,
          "restart_policy": {
            "condition": "on-failure"
          },
          "placement": {
            "constraints": [
              "engine.labels.role==worker",
              "engine.labels.affinity==elasticsearchNode1"
            ]
          }
        },
        "volumes": [
          {
            "type": "volume",
            "source": "elasticsearch1",
            "target": "/usr/share/elasticsearch/data",
            "volume": {
              "nocopy": false
            }
          }
        ],
        "networks": [
          "net"
        ]
      },
      "elasticsearch2": {
        "image": "elasticsearch",
        "configs": [
          {
            "source": "elasticsearch-yml-config",
            "target": "/usr/share/elasticsearch/config/elasticsearch.yml"
          },
          {
            "source": "elasticsearch-jvm-config",
            "target": "/usr/share/elasticsearch/config/jvm.options"
          },
          {
            "source": "elasticsearch-log4j2-config",
            "target": "/usr/share/elasticsearch/config/log4j2.properties"
          }
        ],
        "deploy": {
          "replicas": 1,
          "restart_policy": {
            "condition": "on-failure"
          },
          "placement": {
            "constraints": [
              "engine.labels.role==worker",
              "engine.labels.affinity==elasticsearchNode2"
            ]
          }
        },
        "volumes": [
          {
            "type": "volume",
            "source": "elasticsearch2",
            "target": "/usr/share/elasticsearch/data",
            "volume": {
              "nocopy": false
            }
          }
        ],
        "networks": [
          "net"
        ]
      },
      "namenode": {
        "image": "merlin-hadoop-base-alpine",
        "environment": [
          "HADOOP_MACHINE_ROLE=namenode"
        ],
        "configs": [
          {
            "source": "spark-defaults-config",
            "target": "/usr/local/spark/conf/spark-defaults.conf"
          }
        ],
        "deploy": {
          "replicas": 1,
          "restart_policy": {
            "condition": "on-failure"
          },
          "placement": {
            "constraints": [
              "engine.labels.role==manager"
            ]
          },
          "labels": [
            "traefik.enabled=true",
            "traefik.namenode.port=8088",
            "traefik.namenode.frontend.rule=Host:namenode.parrot-scif.keyw",
            "traefik.hdfs.port=50070",
            "traefik.hdfs.frontend.rule=Host:hdfs.parrot-scif.keyw"
          ]
        },
        "volumes": [
          {
            "type": "volume",
            "source": "hadoop-datavolume",
            "target": "/mnt/merlin",
            "volume": {
              "nocopy": true
            }
          },
          {
            "type": "volume",
            "source": "hadoop-logvolume",
            "target": "/mnt/logs",
            "volume": {
              "nocopy": true
            }
          }
        ],
        "networks": [
          "net"
        ]
      },
      "datanode": {
        "image": "merlin-hadoop-base-alpine",
        "environment": [
          "HADOOP_MACHINE_ROLE=datanode"
        ],
        "configs": [
          {
            "source": "spark-defaults-config",
            "target": "/usr/local/spark/conf/spark-defaults.conf"
          }
        ],
        "deploy": {
          "replicas": 1,
          "restart_policy": {
            "condition": "on-failure"
          },
          "placement": {
            "constraints": [
              "engine.labels.role==worker",
              "engine.labels.affinity==hdfsNode"
            ]
          },
          "labels": [
            "traefik.enable=false"
          ]
        },
        "volumes": [
          {
            "type": "volume",
            "source": "hadoop-datavolume",
            "target": "/mnt/merlin",
            "volume": {
              "nocopy": true
            }
          },
          {
            "type": "volume",
            "source": "hadoop-logvolume",
            "target": "/mnt/logs",
            "volume": {
              "nocopy": true
            }
          }
        ],
        "networks": [
          "net"
        ]
      },
      "sparkworker": {
        "image": "merlin-hadoop-base-alpine",
        "environment": [
          "HADOOP_MACHINE_ROLE=sparkworker"
        ],
        "configs": [
          {
            "source": "spark-defaults-config",
            "target": "/usr/local/spark/conf/spark-defaults.conf"
          }
        ],
        "deploy": {
          "replicas": 3,
          "restart_policy": {
            "condition": "on-failure"
          },
          "placement": {
            "constraints": [
              "engine.labels.role==worker",
              "engine.labels.affinity==sparkNode"
            ]
          },
          "labels": [
            "traefik.enable=false"
          ]
        },
        "volumes": [
          {
            "type": "volume",
            "source": "hadoop-datavolume",
            "target": "/mnt/merlin",
            "volume": {
              "nocopy": true
            }
          },
          {
            "type": "volume",
            "source": "hadoop-logvolume",
            "target": "/mnt/logs",
            "volume": {
              "nocopy": true
            }
          }
        ],
        "networks": [
          "net"
        ]
      },
      "stagingserver": {
        "image": "merlin-hadoop-base-alpine",
        "environment": [
          "HADOOP_MACHINE_ROLE=stagingserver"
        ],
        "configs": [
          {
            "source": "spark-defaults-config",
            "target": "/usr/local/spark/conf/spark-defaults.conf"
          }
        ],
        "deploy": {
          "replicas": 1,
          "restart_policy": {
            "condition": "on-failure"
          },
          "placement": {
            "constraints": [
              "engine.labels.role==worker",
              "engine.labels.affinity==stagingServerNode"
            ]
          },
          "labels": [
            "traefik.port=9999",
            "traefik.backend.loadbalancer.stickiness=true"
          ]
        },
        "volumes": [
          {
            "type": "volume",
            "source": "hadoop-datavolume",
            "target": "/mnt/merlin",
            "volume": {
              "nocopy": true
            }
          },
          {
            "type": "volume",
            "source": "hadoop-logvolume",
            "target": "/mnt/logs",
            "volume": {
              "nocopy": true
            }
          }
        ],
        "networks": [
          "net"
        ]
      },
      "esrally": {
        "deploy": {
          "replicas": 1,
          "restart_policy": {
            "condition": "on-failure"
          },
          "placement": {
            "constraints": [
              "engine.labels.role==manager"
            ]
          }
        },
        "networks": [
          "net"
        ]
      },
      "nginx": {
        "configs": [
          {
            "source": "nginx-elasticsearch-config",
            "target": "/etc/nginx/conf.d/nginx-elasticsearch.conf"
          },
          {
            "source": "nginx-elasticsearch-head-config",
            "target": "/etc/nginx/conf.d/nginx-elasticsearch-head.conf"
          },
          {
            "source": "nginx-staging-config",
            "target": "/etc/nginx/conf.d/nginx-staging.conf"
          },
          {
            "source": "nginx-pgadmin4-config",
            "target": "/etc/nginx/conf.d/nginx-pgadmin4.conf"
          },
          {
            "source": "nginx-amino3-config",
            "target": "/etc/nginx/conf.d/nginx-amino3.conf"
          },
          {
            "source": "nginx-namenode-config",
            "target": "/etc/nginx/conf.d/nginx-namenode.conf"
          },
          {
            "source": "nginx-hdfs-config",
            "target": "/etc/nginx/conf.d/nginx-hdfs.conf"
          },
          {
            "source": "nginx-traefik-config",
            "target": "/etc/nginx/conf.d/nginx-traefik.conf"
          }
        ],
        "deploy": {
          "replicas": 1,
          "restart_policy": {
            "condition": "on-failure"
          },
          "placement": {
            "constraints": [
              "engine.labels.role==manager"
            ]
          }
        },
        "ports": [
          "9200:9200",
          "9100:9100",
          "3000:3000",
          "8088:8088",
          "50070:50070",
          "5050:5050",
          "9999:9999"
        ],
        "networks": [
          "net"
        ]
      }
    }
  }
}
