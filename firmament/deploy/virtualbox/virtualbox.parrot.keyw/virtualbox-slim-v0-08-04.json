      "engineLabels": {
        "role": "manager"
      }
    },
    "workers": []
  },
  "nfsConfig": {
    "nfsUser": "",
    "nfsPassword": "",
    "serverAddr": "192.168.104.32",
    "exportBaseDir": "/var/nfs/merlin802",
    "options": "rw,proto=tcp,async,soft,nolock"
  },
