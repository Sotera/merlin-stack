
{
  "stackName":"merlin",
  "clusterPrefix": "merlin-local",
  "defaultDockerRegistry": "52.0.211.45:5000",
  "defaultDockerImageTag": "0.08.04",
  "traefikZoneName": "vbox.keyw",
  "dockerMachineDriverOptions": {
    "engineInsecureRegistry": "52.0.211.45:5000",
