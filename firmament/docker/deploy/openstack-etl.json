{
  "stackName": "merlin",
  "clusterPrefix": "merlin",
  "dockerComposeYaml": {
    "version": "3.2",
    "networks": {
      "default": {
        "external": {
          "name": "merlin_net"
        }
      }
    },
    "services": {
      "namenode": {
        "image": "10.1.70.193:5000/merlin-hadoop-namenode",
        "deploy": {
          "replicas": 1,
          "restart_policy": {
            "condition": "on-failure"
          },
          "placement": {
            "constraints": [
              "node.role == manager"
            ]
          }
        },
        "ports": [
          "8088:8088",
          "50070:50070",
          "9000:9000",
          "8042:8042",
          "8020:8020"
        ]
      },
      "datanode": {
        "image": "10.1.70.193:5000/merlin-hadoop-base",
        "deploy": {
          "replicas": 2,
          "restart_policy": {
            "condition": "on-failure"
          }
        }
      },
      "sparkworker": {
        "image": "10.1.70.193:5000/merlin-hadoop-base",
        "deploy": {
          "replicas": 2,
          "restart_policy": {
            "condition": "on-failure"
          }
        },
        "command": "/root/hadoop_entrypoint.sh -spark_worker"
      },
      "stagingserver": {
        "image": "10.1.70.193:5000/merlin-hadoop-base",
        "deploy": {
          "replicas": 1,
          "restart_policy": {
            "condition": "on-failure"
          }
        },
        "command": "/root/hadoop_entrypoint.sh"
      }
    }
  },
  "workerHostCount": 1,
  "dockerMachineWorkerOptions": {
    "engineLabel": "role=worker"
  },
  "dockerMachineMasterOptions": {
    "engineLabel": "role=master"
  },
  "dockerMachineDriverOptions": {
    "driver": "openstack",
    "openstackUsername": "",
    "openstackPassword": "",
    "openstackAuthUrl": "http://10.1.70.100:5000/v2.0",
    "openstackFlavorId": "d2ea7e52-5c57-4856-96c0-cab27c03e160",
    "openstackImageId": "2a680ec7-fc97-4e9e-8b51-606907b9aa2b",
    "openstackSecGroups": "All",
    "openstackSshUser": "ubuntu",
    "openstackFloatingipPool": "external-penet",
    "openstackTenantName": "Newman"
  }
}
