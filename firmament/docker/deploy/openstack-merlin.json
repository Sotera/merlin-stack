{
  "stackName": "merlin",
  "clusterPrefix": "merlin",
  "dockerComposeYaml": {
    "version": "3.3",
    "networks": {
      "net": null
    },
    "volumes": {
      "pg-datavolume": {
        "driver": "local",
        "driver_opts": {
          "type": "nfs",
          "device": ":/merlin-lts/db/postgresql",
          "o": "rw,addr=10.1.70.252,proto=tcp,async,soft,nolock"
        }
      },
      "es-datavolume-1": {
        "driver": "local",
        "driver_opts": {
          "type": "nfs",
          "device": ":/merlin-lts/db/es1",
          "o": "rw,addr=10.1.70.252,proto=tcp,async,soft,nolock"
        }
      },
      "es-datavolume-2": {
        "driver": "local",
        "driver_opts": {
          "type": "nfs",
          "device": ":/merlin-lts/db/es2",
          "o": "rw,addr=10.1.70.252,proto=tcp,async,soft,nolock"
        }
      },
      "es-datavolume-3": {
        "driver": "local",
        "driver_opts": {
          "type": "nfs",
          "device": ":/merlin-lts/db/es3",
          "o": "rw,addr=10.1.70.252,proto=tcp,async,soft,nolock"
        }
      }
    },
    "services": {
      "portainer": {
        "image": "10.1.70.193:5000/portainer:0.07.11",
        "deploy": {
          "replicas": 1,
          "restart_policy": {
            "condition": "on-failure"
          },
          "placement": {
            "constraints": [
              "node.role == manager"
            ]
          }
        },
        "volumes":[
          "/var/run/docker.sock:/var/run/docker.sock"
        ],
        "ports": [
          "9001:9000"
        ],
        "networks": [
          "net"
        ]
      },
      "postgres": {
        "image": "10.1.70.193:5000/postgres:0.07.11",
        "environment": [
          "POSTGRES_PASSWORD=password"
        ],
        "deploy": {
          "replicas": 1,
          "restart_policy": {
            "condition": "on-failure"
          },
          "placement": {
            "constraints": [
              "node.role == manager"
            ]
          }
        },
        "ports": [
          "5432:5432"
        ],
        "volumes": [
          {
            "type": "volume",
            "source": "pg-datavolume",
            "target": "/var/lib/postgresql/data",
            "volume": {
              "nocopy": false
            }
          }
        ],
        "networks": [
          "net"
        ]
      },
      "amino3": {
        "image": "10.1.70.193:5000/amino3::0.07.11",
        "environment": [
          "NODE_ENV=production"
        ],
        "deploy": {
          "replicas": 1,
          "restart_policy": {
            "condition": "on-failure"
          },
          "placement": {
            "constraints": [
              "node.role == manager"
            ]
          }
        },
        "ports": [
          "3000:3000"
        ],
        "networks": [
          "net"
        ]
      },
      "elasticsearch": {
        "image": "10.1.70.193:5000/elasticsearch:0.07.11",
        "deploy": {
          "replicas": 1,
          "endpoint_mode": "dnsrr",
          "restart_policy": {
            "condition": "on-failure"
          },
          "placement": {
            "constraints": [
              "node.role == worker"
            ]
          }
        },
        "volumes": [
          {
            "type": "volume",
            "source": "es-datavolume-1",
            "target": "/usr/share/elasticsearch/data",
            "volume": {
              "nocopy": false
            }
          }
        ],
        "networks": [
          "net"
        ]
      },
      "elasticsearch2": {
        "image": "10.1.70.193:5000/elasticsearch:0.07.11",
        "deploy": {
          "replicas": 1,
          "endpoint_mode": "dnsrr",
          "restart_policy": {
            "condition": "on-failure"
          },
          "placement": {
            "constraints": [
              "node.role == worker"
            ]
          }
        },
        "volumes": [
          {
            "type": "volume",
            "source": "es-datavolume-2",
            "target": "/usr/share/elasticsearch/data",
            "volume": {
              "nocopy": false
            }
          }
        ],
        "networks": [
          "net"
        ]
      },
      "elasticsearch3": {
        "image": "10.1.70.193:5000/elasticsearch:0.07.11",
        "deploy": {
          "replicas": 1,
          "endpoint_mode": "dnsrr",
          "restart_policy": {
            "condition": "on-failure"
          },
          "placement": {
            "constraints": [
              "node.role == worker"
            ]
          }
        },
        "volumes": [
          {
            "type": "volume",
            "source": "es-datavolume-3",
            "target": "/usr/share/elasticsearch/data",
            "volume": {
              "nocopy": false
            }
          }
        ],
        "networks": [
          "net"
        ]
      },
      "elasticsearch-head": {
        "image": "10.1.70.193:5000/elasticsearch-head:0.07.11",
        "deploy": {
          "replicas": 1,
          "restart_policy": {
            "condition": "on-failure"
          },
          "placement": {
            "constraints": [
              "node.role == worker"
            ]
          }
        },
        "ports": [
          "9100:9100"
        ],
        "networks": [
          "net"
        ]
      },
      "nginx": {
        "image": "10.1.70.193:5000/nginx:0.07.11",
        "deploy": {
          "replicas": 1,
          "restart_policy": {
            "condition": "on-failure"
          },
          "placement": {
            "constraints": [
              "node.role == manager"
            ]
          }
        },
        "ports": [
          "9200:9200"
        ],
        "networks": [
          "net"
        ]
      }
    }
  },
  "workerHostCount": 2,
  "dockerMachineWorkerOptions": {
    "engineLabel": "role=worker"
  },
  "dockerMachineMasterOptions": {
    "engineLabel": "role=master"
  },
  "dockerMachineDriverOptions": {
    "driver": "openstack",
    "engineInsecureRegistry": "10.1.70.193:5000",
    "openstackUsername": "",
    "openstackPassword": "",
    "openstackAuthUrl": "http://10.1.70.100:5000/v2.0",
    "openstackFlavorId": "d2ea7e52-5c57-4856-96c0-cab27c03e160",
    "openstackImageId": "47159a88-91d8-486a-8f4f-6aa10b9b02d8",
    "openstackSecGroups": "All",
    "openstackSshUser": "ubuntu",
    "openstackFloatingipPool": "external-penet",
    "openstackTenantName": "Newman"
  }
}
