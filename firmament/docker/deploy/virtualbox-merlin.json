{
  "stackName":"merlin",
  "clusterPrefix": "merlin-local",
  "dockerComposeYaml": {
    "version": "3.3",
    "networks": {
      "net": null
    },
    "volumes": {
      "pg-datavolume": {
        "driver": "local",
        "driver_opts": {
          "type": "nfs",
          "device": ":/var/nfs/merlin/postgresql",
          "o": "rw,addr=<YOUR NFS SERVER IP HERE>,proto=tcp,async,soft,nolock"
        }
      },
      "es-datavolume-1": {
        "driver": "local",
        "driver_opts": {
          "type": "nfs",
          "device": ":/var/nfs/merlin/es1",
          "o": "rw,addr=<YOUR NFS SERVER IP HERE>,proto=tcp,async,soft,nolock"
        }
      },
      "es-datavolume-2": {
        "driver": "local",
        "driver_opts": {
          "type": "nfs",
          "device": ":/var/nfs/merlin/es2",
          "o": "rw,addr=<YOUR NFS SERVER IP HERE>,proto=tcp,async,soft,nolock"
        }
      },
      "es-datavolume-3": {
        "driver": "local",
        "driver_opts": {
          "type": "nfs",
          "device": ":/var/nfs/merlin/es3",
          "o": "rw,addr=<YOUR NFS SERVER IP HERE>,proto=tcp,async,soft,nolock"
        }
      }
    },
    "services": {
      "portainer": {
        "image": "52.0.211.45:5000/portainer:0.07.11",
        "deploy": {
          "replicas": 1,
          "restart_policy": {
            "condition": "on-failure"
          },
          "placement": {
            "constraints": [
              "node.role == manager"
            ]
          }
        },
        "volumes":[
          "/var/run/docker.sock:/var/run/docker.sock"
        ],
        "ports": [
          "9001:9000"
        ],
        "networks": [
          "net"
        ]
      },
      "postgres": {
        "image": "52.0.211.45:5000/postgres:0.07.11",
        "environment": [
          "POSTGRES_PASSWORD=password"
        ],
        "deploy": {
          "replicas": 1,
          "restart_policy": {
            "condition": "on-failure"
          },
          "placement": {
            "constraints": [
              "node.role == manager"
            ]
          }
        },
        "ports": [
          "5432:5432"
        ],
        "volumes": [
          {
            "type": "volume",
            "source": "pg-datavolume",
            "target": "/var/lib/postgresql/data",
            "volume": {
              "nocopy": false
            }
          }
        ],
        "networks": [
          "net"
        ]
      },
      "amino3": {
        "image": "52.0.211.45:5000/amino3:0.07.11",
        "environment": [
          "NODE_ENV=production"
        ],
        "deploy": {
          "replicas": 1,
          "restart_policy": {
            "condition": "on-failure"
          },
          "placement": {
            "constraints": [
              "node.role == manager"
            ]
          }
        },
        "ports": [
          "3000:3000"
        ],
        "networks": [
          "net"
        ]
      },
      "elasticsearch": {
        "image": "52.0.211.45:5000/elasticsearch:0.07.11",
        "deploy": {
          "replicas": 1,
          "endpoint_mode": "dnsrr",
          "restart_policy": {
            "condition": "on-failure"
          }
        },
        "volumes": [
          {
            "type": "volume",
            "source": "es-datavolume-1",
            "target": "/usr/share/elasticsearch/data",
            "volume": {
              "nocopy": false
            }
          }
        ],
        "networks": [
          "net"
        ]
      },
      "elasticsearch2": {
        "image": "52.0.211.45:5000/elasticsearch:0.07.11",
        "deploy": {
          "replicas": 1,
          "endpoint_mode": "dnsrr",
          "restart_policy": {
            "condition": "on-failure"
          }
        },
        "volumes": [
          {
            "type": "volume",
            "source": "es-datavolume-2",
            "target": "/usr/share/elasticsearch/data",
            "volume": {
              "nocopy": false
            }
          }
        ],
        "networks": [
          "net"
        ]
      },
      "elasticsearch3": {
        "image": "52.0.211.45:5000/elasticsearch:0.07.11",
        "deploy": {
          "replicas": 1,
          "endpoint_mode": "dnsrr",
          "restart_policy": {
            "condition": "on-failure"
          }
        },
        "volumes": [
          {
            "type": "volume",
            "source": "es-datavolume-3",
            "target": "/usr/share/elasticsearch/data",
            "volume": {
              "nocopy": false
            }
          }
        ],
        "networks": [
          "net"
        ]
      },
      "elasticsearch-head": {
        "image": "52.0.211.45:5000/elasticsearch-head:0.07.11",
        "deploy": {
          "replicas": 1,
          "restart_policy": {
            "condition": "on-failure"
          }
        },
        "ports": [
          "9100:9100"
        ],
        "networks": [
          "net"
        ]
      },
      "nginx": {
        "image": "52.0.211.45:5000/nginx:0.07.11",
        "deploy": {
          "replicas": 1,
          "restart_policy": {
            "condition": "on-failure"
          }
        },
        "ports": [
          "9200:9200"
        ],
        "networks": [
          "net"
        ]
      }
    }
  },
  "workerHostCount": 0,
  "dockerMachineWorkerOptions": {
    "engineLabel": "role=worker"
  },
  "dockerMachineMasterOptions": {
    "engineLabel": "role=master"
  },
  "dockerMachineDriverOptions": {
    "driver": "virtualbox",
    "virtualboxCpuCount": 2,
    "virtualboxMemory": 32768,
    "engineInsecureRegistry": "52.0.211.45:5000"
  }
}
